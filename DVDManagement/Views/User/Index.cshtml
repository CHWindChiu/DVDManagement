@model DVDManagement.Models.Admin

<div class="container">
    <div class="row">
        <form asp-action="Info" method="get">
            <div class="card">
                <div class="card-body">
                    <div class="input-group">
                        <div class="input-group-btn search-panel">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span id="searchConcept">搜尋方式</span> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a>帳號</a></li>
                                <li><a>Email</a></li>
                                <li><a>電話</a></li>
                            </ul>
                        </div>

                        <!-- 搜尋方式參數 -->
                        <input type="hidden" name="searchParam" value="@ViewData[" CurrentFilterType"]" id="searchParam">
                        <input type="text" class="form-control" name="searchString" placeholder="搜尋內容" value="@ViewData[" currentFilter"]">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


