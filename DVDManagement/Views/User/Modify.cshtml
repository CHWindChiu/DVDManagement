@model DVDManagement.Models.UserViewModel.InfoViewModel

@section Styles {
    <link href="~/css/bootstrap-datepicker3.standalone.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="addUserViewModel.User_no" class="form-control-label"></label> : @Html.DisplayFor(m => m.userModel.User_no)
            <input id="userNoHidden" type="hidden" value="@Model.userModel.User_no">
        </div>
        <form asp-action="modify" asp-controller="user" class="form-horizontal form-material">
            <div class="form-group">
                <label asp-for="addUserViewModel.Name" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="addUserViewModel.Name" type="text" value="@Model.userModel.Name" class="form-control form-control-line">
                    <span asp-validation-for="addUserViewModel.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="addUserViewModel.Email" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="addUserViewModel.Email" type="text" value="@Model.userModel.Email" class="form-control form-control-line">
                    <span asp-validation-for="addUserViewModel.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="addUserViewModel.Phone_1" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="addUserViewModel.Phone_1" type="text" value="@Model.userModel.Phone_1" class="form-control form-control-line">
                    <span asp-validation-for="addUserViewModel.Phone_1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="addUserViewModel.Phone_2" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="addUserViewModel.Phone_2" type="text" value="@Model.userModel.Phone_2" class="form-control form-control-line">
                    <span asp-validation-for="addUserViewModel.Phone_2" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-success">送出</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/lib/bootstrap/dist/js/bootstrap-birthday.js"></script>

    <script>
        $(document).ready(function (e) {
            $('#input-group').bootstrapBirthday(
                {
                text: {
                    year: "年份",
                        month: "月份",
                        day: "日",
                        months: {
                        short: [
                                "一月",
                                "二月",
                                "三月",
                                "四月",
                                "五月",
                                "六月",
                                "七月",
                                "八月",
                                "九月",
                                "十月",
                                "十一月",
                                "十二月"
                            ]
                        }
                }
            }
            );
        });
    </script>
}