@model DVDManagement.Models.User

@section Styles {
    <link href="~/css/bootstrap-datepicker3.standalone.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="modify" asp-controller="user" class="form-horizontal form-material">
            <div class="form-group">
                <label asp-for="User_no" class="form-control-label"></label> : @Html.DisplayFor(m => m.User_no)
                <input asp-for="User_no" id="userNoHidden" type="hidden" value="@Model.User_no">
            </div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Name" type="text" value="@Model.Name" class="form-control form-control-line">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Email" type="text" value="@Model.Email" class="form-control form-control-line">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone_1" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Phone_1" type="text" value="@Model.Phone_1" class="form-control form-control-line">
                    <span asp-validation-for="Phone_1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone_2" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Phone_2" type="text" value="@Model.Phone_2" class="form-control form-control-line">
                    <span asp-validation-for="Phone_2" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-success">送出</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}