@model DVDManagement.Models.Dvd_info

@section Styles {
    <link href="~/css/bootstrap-datepicker3.standalone.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-body">
        <form asp-action="addDVD" asp-controller="dvd" class="form-horizontal form-material">
            <div class="form-group">
                <label asp-for="Name" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Name" type="text" class="form-control form-control-line">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="col-md-12"></label>
                <div class="col-md-12">
                    <select asp-for="Type">
                        <option value="0">劇情</option>
                        <option value="1">動作</option>
                        <option value="2">恐怖驚悚</option>
                        <option value="3">喜劇</option>
                        <option value="4">紀錄片</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Rent" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Rent" id="input-group" type="number" value="0" min="0" step="0" data-number-to-fixed="0" class="form-control">
                    <span asp-validation-for="Rent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Overdue" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Overdue" type="number" value="0" min="0" step="0" data-number-to-fixed="0" class="form-control" />
                    <span asp-validation-for="Overdue" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Time_limit" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="Time_limit" type="number" value="0" min="0" step="0" data-number-to-fixed="0" class="form-control" />
                    <span asp-validation-for="Time_limit" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-success">送出</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
